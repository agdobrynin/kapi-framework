{
  "name": "kaspi/kapi-framework",
  "description": "A Kaspi Framework - simple MVC web application",
  "keywords": ["framework","micro","api","router"],
  "license": "MIT",
  "authors": [
    {
      "name": "Alexei Dobrynin",
      "email": "ag.dobrynin@gmail.com",
      "homepage": "http://kaspi.ru"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": "^7.2",
    "ext-pdo": "*",
    "ext-json": "*",
    "ralouphie/getallheaders": "^3.0.3",
    "splitbrain/php-cli": "^1.1"
  },
  "autoload": {
    "psr-4": {
      "Kaspi\\": "src/kaspi"
    },
    "files": [
      "src/kaspi/helpers/helpers.php"
    ]
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.15",
    "roave/security-advisories": "dev-master",
    "phpunit/phpunit": "^8.5",
    "pcov/clobber": "^2.0"
  },
  "scripts": {
    "fixer" : "sh vendor/bin/php-cs-fixer fix"
  },
  "bin": ["bin/kaspi-migrate"]
}
